<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zulham.hoopspot">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HoopSpotWithActionBar">
        <activity android:name=".ui.parking.main.ParkingActivity"
            android:parentActivityName=".ui.place.PlaceActivity"/>
        <activity android:name=".ui.parking.detail.ParkingDetailActivity"
            android:parentActivityName=".ui.parking.main.ParkingActivity"/>
        <activity android:name=".ui.place.PlaceActivity"
            android:theme="@style/Theme.HoopSpot">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>